/*
 * 3.1  Describe how you could use a single array to implement
 * three stacks.
 * 
 * Fixed division implementation of three stacks
 */
public class Stack1 extends Stack {
	public static final Object[] array = new Object[30];
	private static final int SIZE = 10;
	private static int numOfStack = 0;
	private int top;
	private int start;
	
	Stack1() throws Exception {
		if (numOfStack < 3){
			start = numOfStack * SIZE;
			top = start-1;
		} else {
			throw new Exception("already creat three stacks");
		}
	}
	
	@Override
	public boolean isEmpty(){
		return top == start-1;
	}
	
	@Override
	public void push(Object item){
		if (isFull()) {System.out.println("stack already full"); return;}
		top++;
		array[top] = item;
	}
	
	public boolean isFull(){
		return top == start+SIZE-1;
	}

	
}