import static org.junit.Assert.*;

import org.junit.Test;


public class Stack1Test {
	Stack1[] stacks = new Stack1[3]; // this new just create a array
	@Test
	public void testConstructor(){
		for (int i=0; i<3; i++ ){
			stacks[i] = new Stack1();
		}
		assertEquals(3,Stack1.numOfStack);
		
		for (int i=0; i<3; i++){
			stacks[i] = null;
		}
		Stack1.clear();
		assertEquals(0,Stack1.numOfStack);
	}

	@Test
	public void testPush() {
		for (int i=0; i<3; i++ ){
			stacks[i] = new Stack1();
		}
		
		stacks[0].push(new Integer(0));
		assertEquals(0,((Integer)Stack1.array[0]).intValue());
		
		stacks[2].push(new Integer(20));
		assertEquals(20,((Integer)Stack1.array[20]).intValue());
		
		for (int i=0; i<3; i++){
			stacks[i] = null;
		}
		Stack1.clear();
		
	}

	@Test
	public void testIsEmpty() {
		
	}

	@Test
	public void testIsFull() {
		
	}

	@Test
	public void testPop() {
		
	}

	@Test
	public void testPeek() {
		
	}

}

